  <script>
    const paises = [
      'Perú','Argentina','Brasil','Francia','Japón','Italia','Canadá','Chile','Alemania','India',
      'España','México','Australia','Egipto','China','Rusia','Colombia','Venezuela','Suecia','Noruega',
      'Portugal','Irlanda','Grecia','Corea del Sur','Sudáfrica','Ecuador','Bolivia','Paraguay','Uruguay','Cuba',
      'Panamá','Nicaragua','Guatemala','El Salvador','Honduras','República Dominicana','Finlandia','Polonia','Ucrania','Turquía',
      'Irán','Arabia Saudita','Tailandia','Vietnam','Indonesia','Malasia','Filipinas','Nueva Zelanda','Países Bajos','Bélgica',
      'Suiza','Dinamarca','Austria','Israel','Pakistán','Bangladés','Kazajistán','Singapur','Qatar'
    ];
    const paisesFacil = paises.slice(0, 20);
    const paisesMedio = paises.slice(20, 40);
    const paisesDificil = paises.slice(40, 60);

    function crearPreguntas(listaPaises) {
      return listaPaises.map(pais => {
        let opciones = [pais];
        while (opciones.length < 5) {
          const opc = listaPaises[Math.floor(Math.random() * listaPaises.length)];
          if (!opciones.includes(opc)) opciones.push(opc);
        }
        opciones.sort(() => Math.random() - 0.5);
        return {
          imagen: `recursos/${pais.toLowerCase().replace(/\s+/g, '')}.png`,
          correcta: pais,
          opciones
        };
      });
    }
    const preguntasPorNivel = {
      facil: crearPreguntas(paisesFacil),
      medio: crearPreguntas(paisesMedio),
      dificil: crearPreguntas(paisesDificil)
    };

    let nivelActual = 'facil';
    let preguntas = [];
    let respuestas = [];
    let indexPregunta = 0;
    let inicioTiempo = 0;
    let timerInterval = null;

    window.onload = () => {
      const nombre = localStorage.getItem("nombreJugador") || "Jugador";
      document.getElementById('nombreUsuario').textContent = nombre;
      document.getElementById('textoInicio').textContent = `Selecciona tu dificultad, ${nombre}`;
    };

    function mostrarPantalla(id) {
      document.querySelectorAll('.pantalla').forEach(p => p.classList.remove('activa'));
      document.getElementById(id).classList.add('activa');
    }

    function iniciarTutorial(nivel) {
      nivelActual = nivel;
      mostrarPantalla('pantallaTutorial');
      document.getElementById('panelSuperior').style.display = 'none';
      const nombre = localStorage.getItem("nombreJugador") || "Jugador";
      document.getElementById("textoMotivacion").textContent = `Tú puedes, ${nombre}`;
    }
    function volverAPantallaInicio() {
      mostrarPantalla('pantallaInicio');
    }
    function iniciarJuegoDesdeTutorial() {
      preguntas = [...preguntasPorNivel[nivelActual]].sort(() => Math.random() - 0.5);
      respuestas = [];
      indexPregunta = 0;
      document.getElementById('panelSuperior').style.display = 'flex';
      mostrarPantalla('pantallaJuego');
      const header = document.getElementById('headerJuego');
      const nombre = localStorage.getItem("nombreJugador") || "Jugador";
      document.getElementById('mensajeJuego').textContent = `¡Tú puedes, ${nombre}!`;
      header.style.display = 'flex';
      inicioTiempo = Date.now();
      clearInterval(timerInterval);
      actualizarTimer();
      timerInterval = setInterval(actualizarTimer, 500);
      mostrarPregunta();
    }

    function generarImagenBandera(ruta) {
      return ruta;
    }

    function actualizarTimer() {
      const elapsed = Date.now() - inicioTiempo;
      const seconds = Math.floor(elapsed / 1000) % 60;
      const minutes = Math.floor(elapsed / 60000);
      const mm = minutes.toString().padStart(2, "0");
      const ss = seconds.toString().padStart(2, "0");
      document.getElementById("timer").textContent = mm + ":" + ss;
    }

    function mostrarPregunta() {
      const total = preguntas.length;
      document.getElementById("preguntaInfo").textContent = `Pregunta ${indexPregunta + 1}/${total}`;
      const actual = preguntas[indexPregunta];
      const banderaEl = document.getElementById('imagenBandera');
      const contenedor = document.getElementById('opciones');
      banderaEl.classList.remove('fade-in');
      contenedor.classList.remove('fade-in');
      setTimeout(() => {
        banderaEl.src = generarImagenBandera(actual.imagen);
        banderaEl.alt = `Bandera de ${actual.correcta}`;
        banderaEl.classList.add('fade-in');
        contenedor.innerHTML = '';
        contenedor.classList.add('fade-in');
        actual.opciones.sort(() => Math.random() - 0.5).forEach(op => {
          const btn = document.createElement('button');
          btn.textContent = op;
          btn.onclick = () => {
            respuestas.push({
              bandera: actual.imagen,
              respuesta: op,
              correcta: actual.correcta
            });
            indexPregunta++;
            if (indexPregunta < preguntas.length) {
              mostrarPregunta();
            } else {
              mostrarResultado();
            }
          };
          contenedor.appendChild(btn);
        });
      }, 50);
    }

    function mostrarResultado() {
      clearInterval(timerInterval);
      mostrarPantalla('pantallaResultado');
      document.getElementById('panelSuperior').style.display = 'none';
      const detalle = document.getElementById('detalleResultado');
      detalle.innerHTML = '';
      const nombre = localStorage.getItem("nombreJugador") || "Jugador";
      document.getElementById('tituloResultado').textContent = `Estos son tus resultados, ${nombre}`;
      respuestas.forEach(r => {
        const nombreBandera = r.bandera.split('/').pop().replace('.png', '');
        const div = document.createElement('div');
        div.className = "tarjetaResultado";
        const estado = r.respuesta === r.correcta ?
          `<span class="correcto">✅ Correcto</span>` :
          `<span class="incorrecto">❌ Incorrecto</span>`;
        div.innerHTML = `
          ${estado}<br>
          <strong>Bandera:</strong> ${nombreBandera.toUpperCase()}<br>
          <strong>Tu respuesta:</strong> ${r.respuesta}<br>
          <strong>Correcta:</strong> ${r.correcta}
        `;
        detalle.appendChild(div);
      });
    }

    function volverInicio() {
      document.getElementById('panelSuperior').style.display = 'none';
      mostrarPantalla('pantallaInicio');
    }
    function volver() {
      window.location.href = "../index.html";
    }
    function toggleFullscreen() {
      if (!document.fullscreenElement) {
        document.documentElement.requestFullscreen();
      } else {
        document.exitFullscreen();
      }
    }
    function abrirSettings() {
      document.getElementById("settingsModal").style.display = 'flex';
    }
    function cerrarSettings() {
      document.getElementById("settingsModal").style.display = 'none';
    }
    function googleTranslateElementInit() {
      new google.translate.TranslateElement(
        {pageLanguage:'es', layout:google.translate.TranslateElement.InlineLayout.SIMPLE},
        'google_translate_element'
      );
    }
  </script>
  <script src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
</body>
